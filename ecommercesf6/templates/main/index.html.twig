{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12>"
                <h1> Site e-commerce</h1>
                <p>Bienvenue dans notre boutique </p>
            </div>
            <div class="col-12">
                {% for categorie in categorie %}
                    {% if categorie.parent == null %}
                        <div class="col-12">
                            <h2>{{categorie.name}}</h2>
                        </div>
                    {% else %}
                        <div class="col-3">
                            <div class="card">
                                <div class ="card-body">
                                    <h3 class="card-title">{{categorie.name}}</h3>
                                    <p class="card-text">Lorem ipsum</p>
                                    <a href ="#" class ="btn btn-primary">Voir les produits</a>
                                </div>
                            </div>
                            <a href ="#"></a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
